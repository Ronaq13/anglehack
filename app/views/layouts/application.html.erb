<!DOCTYPE html>
<html>
<head>
  <title>Anglehack2017</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%if user_signed_in?%>
    <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo">Bookmics</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="sass.html">Trending</a></li>
          <li><a href="badges.html">Home</a></li>
          <li><a href="/users/sign_out" data-method="DELETE">Sign out</a></li>
        </ul>
      </div>
    </nav>
<%else%>
    <nav>
      <div class="nav-wrapper">
        <a href="#" class="brand-logo">Bookmics</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="/users/sign_in">Sign In</a></li>
          <li><a href="/users/sign_up">Sign Up</a></li>
        </ul>
      </div>
    </nav>
<%end%>




<%= yield %>



<%if user_signed_in? %>
    <div class="fixed-action-btn">
      <a class="btn-floating btn-large red">
        <i class="large material-icons">mode_edit</i>
      </a>
      <ul>
        <li><a class="btn-floating red"><i class="material-icons">insert_chart</i></a></li>
        <li><a class="btn-floating yellow darken-1"><i class="material-icons">format_quote</i></a></li>
        <li><a class="btn-floating green" href="/upload"><i class="material-icons">publish</i></a></li>
      </ul>
    </div>
<%end%>





